{
    "mcpServers": {
        "alpaca": {
            "type": "url",
            "url": "https://mcp.alpaca.markets/sse",
            "name": "alpaca-trading"
        },
        "yfinance": {
            "command": "uvx",
            "args": [
                "yahoo-finance-mcp"
            ]
        },
        "brave-search": {
            "command": "npx",
            "args": [
                "-y",
                "@brave/brave-search-mcp-server"
            ],
            "env": {
                "BRAVE_API_KEY": "${BRAVE_API_KEY}"
            }
        },
        "tavily": {
            "command": "npx",
            "args": [
                "-y",
                "tavily-mcp"
            ],
            "env": {
                "TAVILY_API_KEY": "${TAVILY_API_KEY}"
            }
        },
        "supabase": {
            "type": "http",
            "url": "https://mcp.supabase.com/mcp?project_ref=${SUPABASE_PROJECT_REF}"
        },
        "slack-notify": {
            "command": "npx",
            "args": [
                "-y",
                "@mkusaka/mcp-server-slack-notify"
            ],
            "env": {
                "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}",
                "SLACK_DEFAULT_CHANNEL": "${SLACK_CHANNEL}"
            }
        },
        "discord-notify": {
            "command": "node",
            "args": [
                "./mcp/discord/index.js"
            ],
            "env": {
                "DISCORD_WEBHOOK_URL": "${DISCORD_WEBHOOK_URL}"
            }
        },
        "github": {
            "command": "npx",
            "args": [
                "-y",
                "@github/mcp-server"
            ],
            "env": {
                "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
            }
        }
    }
}